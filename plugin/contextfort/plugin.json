{
  "name": "contextfort",
  "version": "1.0.0",
  "description": "Enterprise browser isolation for AI agents",
  "publisher": "ContextFort",
  "homepage": "https://github.com/contextfort/claude-code-plugin",
  "license": "MIT",
  "hooks": {
    "PreToolUse": "./hooks/pre-tool-use.sh",
    "SessionEnd": "./hooks/session-end.sh"
  },
  "commands": {
    "status": {
      "description": "Check ContextFort status and active sessions",
      "script": "./bin/status.sh"
    },
    "cleanup": {
      "description": "Manually cleanup all sessions",
      "script": "./bin/cleanup.sh"
    },
    "dashboard": {
      "description": "Open ContextFort dashboard",
      "script": "./bin/dashboard.sh"
    }
  },
  "settings": {
    "dashboardUrl": "http://localhost:8080",
    "maxSessionDuration": 3600,
    "screenshotInterval": 30,
    "retentionDays": 90,
    "autoCleanup": true,
    "logLevel": "info"
  },
  "permissions": [
    "launch_processes",
    "file_system_temp",
    "network_localhost"
  ],
  "requirements": {
    "chrome": ">=120.0.0",
    "claude": ">=1.0.0",
    "os": ["darwin", "linux"]
  }
}
